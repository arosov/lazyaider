#app-container {
    width: 100%;
    height: 100%;
    padding: 1 2;
    align: center top; /* Align content to the top */
}

.hidden {
    display: none !important; /* Use !important to ensure override if needed */
}

#feature_input_container, #loading_container, #plan_display_container {
    width: 100%;
    /* height: 100%; */ /* Allow natural height based on content */
    align: center top;
    padding: 1;
    /* gap: 1; */ /* Removed: 'gap' property caused an error. Manage spacing with padding/margins. */
}

#loading_container {
    width: 100%; /* Keep width */
    /* padding-top: 5; */ /* Temporarily removed for debugging */
    /* height: 20; */   /* Temporarily removed to let it size to content */
    /* align: center middle; */ /* Temporarily removed for debugging */
    border: thick green; /* DEBUG: Make container border visible */
    margin-bottom: 1; /* Ensure some space below if it's rendered */
}

#spinner { /* Style for the LoadingIndicator widget */
    width: 100%;
    height: 1; /* Explicit height for the spinner line */
    text-align: center; /* Center the spinner dots */
    background: ansi_blue; /* DEBUG: Corrected to ansi_blue */
}

#loading_subtext {
    width: 100%;
    text-align: center;
    color: $text; /* Changed from $text-muted to ensure visibility for debugging */
    height: 3; /* Explicit height for debugging */
    background: ansi_red; /* Corrected: Bright background for debugging */
    /* If $text-muted was very light, it might be hard to see on ansired. */
    /* Consider a contrasting color like white or black if needed, e.g., color: white; */
}

.label {
    width: 100%;
    text-align: center;
    padding: 1 0;
    text-style: bold; /* Use text-style for bolding in Textual CSS */
}

TextArea {
    width: 90%;
    max-width: 100%; /* Ensure it doesn't overflow small terminals */
    height: 15; /* Default height, can be overridden */
    border: round $primary;
    margin-bottom: 1; /* Add some space below text areas */
}
#feature_description_input {
    height: 10; /* Specific height for feature input */
}
#plan_display_area {
    height: 20; /* More height for plan display */
}

TextArea:focus {
    border: round $primary; /* Use defined variable $primary */
}

/* Styling for error state on TextArea */
TextArea.-error-border {
    border: heavy red;
    border-title-color: red;
    border-title-style: bold;
}


.button-container {
    width: 90%;
    max-width: 100%;
    align: center middle;
    padding-top: 1;
    height: auto; /* Allow buttons to define height */
    layout: horizontal;
    grid-size: 2; /* For two buttons */
    grid-gutter: 1; /* Spacing between buttons in the grid */
}

Button {
    width: 100%; /* Buttons will take up available grid space */
    /* margin: 0 1%; */ /* No longer needed with grid layout */
}
