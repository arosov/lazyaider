#app-container {
    width: 100%;
    height: 1fr;
    padding: 1 2;
    align: center top;
}
.hidden { 
    display: none !important; 
}
#feature_input_container, #loading_container, #plan_display_container {
    width: 100%; 
    align: center top; 
    padding: 1; 
}
#loading_container { 
    align: center middle; /* Center content (spinner & text) vertically and horizontally */
    height: 100%;
}
#loading_subtext { 
    width: 100%; 
    text-align: center; 
    align: center top;
    height: auto;
    margin-top: 1; /* Add space between spinner and text */
}
#spinner {
   height: 1;
}
.label { 
    width: 100%; 
    text-align: center; 
    padding: 1 0; 
    text-style: bold;
}
TextArea { 
    width: 100%; /* Take full width of parent */
    max-width: 100%; 
    height: 15; /* Default height */
    border: round $primary; 
    margin-bottom: 1; 
}
#feature_description_input { 
    height: 1fr; }
#plan_display_area { 
    height: 1fr;
}
TextArea:focus { 
    border: round $accent; 
}
/* Styling for error state on TextArea */
TextArea.-error-border { /* Class to be added dynamically */
    border: heavy red;
    border-title-color: red;
    border-title-style: bold; /* if border-title is used */
}
.button-container { 
    width: 100%; 
    max-width: 100%; 
    align-horizontal: center; /* Center buttons within the container */
    padding-top: 1; 
    height: auto; 
    layout: horizontal;
}
Button { 
    width: auto; /* Buttons wrap their content */
}

#repomap_method_radioset {
    width: auto; /* Let RadioSet size to its content */
    height: auto;
    margin-right: 2; /* Space between RadioSet and Generate Plan button */
}

#repomap_method_radioset RadioButton {
    width: auto; /* Let RadioButton size to its content */
    margin-right: 1; /* Space between radio buttons if they were horizontal */
                     /* For vertical, this might not be needed, but doesn't hurt */
}
